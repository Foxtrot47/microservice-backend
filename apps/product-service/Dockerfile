# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t product-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system product-service && \
          adduser --system -G product-service product-service

COPY dist/apps/product-service product-service
RUN chown -R product-service:product-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix product-service --omit=dev -f install

CMD [ "node", "product-service" ]
